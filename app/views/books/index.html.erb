<h2>Books</h2>

<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>

      <tr>

        <td>
          <%= image_tag("sample-author1.jpg") %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= book.opinion %>
        </td>
      </tr>

    </tbody>
    <% end %>
  </table>
</div>