<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Editing Book</h1>
      <%= render "books/error", model: @book %>
      <%= form_with model:@book, local: true do |f| %>
        <div class="form-group">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <p>Opinion</p>
          <%= f.text_area :body %>
        </div>
        <%= f.submit "Update Book" %>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>