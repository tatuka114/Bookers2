<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
      <%= render "users/user", user: @user %>
      <h2>New book</h2>
      <%= render "books/new", book: @book %>
    </div>
  </div>
</div>
<h2>Books</h2>
<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>

        <tr>

          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td>
            <%= book.opinion %>
          </td>

        </tr>
      </tbody>
    <% end %>
  </table>
</div>