<div class="container">
  <%= render "books/error", book: @book %>
  <div class="row">
    <div class="col-xs-3">
      <%= render "users/user", user: @user %>
      <h2>New book</h2>
      <%= render "books/new", book: @book %>
    </div>
    <div class="col-xs-9">
      <h2>Users</h2>
      <table>
        <thead>
          <th>image</th>
          <th>name</th>
          <th></th>
  	    </thead>
  	  	<tbody>
  	  	  <% @users.each do |user| %>
	  	  	<tr>
	  	  	  <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", user_path(user_id) %></td>
	  	  	</tr>
  	  	  <% end %>
  	  	</tbody>
      </table>
    </div>
  </div>
</div>